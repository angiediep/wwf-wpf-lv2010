								</Path.RenderTransform>
							</Path>
						</Canvas>
						<ControlTemplate.Triggers>
							<Trigger Property="IsFocused" Value="True"/>
							<Trigger Property="IsDefaulted" Value="True"/>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter Property="StrokeThickness" TargetName="btnClose" Value="1"/>
								<Setter Property="Stroke" TargetName="btnClose" Value="#FF222222"/>
							</Trigger>
							<Trigger Property="IsPressed" Value="True"/>
							<Trigger Property="IsEnabled" Value="False"/>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
	</Window.Resources>

<Border Margin="0" CornerRadius="5" BorderThickness="1" BorderBrush="#FF1A1A1A" Background="#FF75CFF8" MouseLeftButtonDown="Border_MouseLeftButtonDown" Width="542.914">
		<Grid Margin="1,-1,0,-1" HorizontalAlignment="Left" Width="540.914">
  
            <Button x:Name="btnUpload" Margin="228,0,0,61.081"   VerticalAlignment="Bottom" Content="Tải lên" BorderBrush="#FF333333" Height="23.077" TabIndex="8" d:LayoutOverrides="GridBox" HorizontalAlignment="Left" Width="77.914" Click="btnUpload_Click" />
            <Rectangle Fill="#FF0F1D04" VerticalAlignment="Top" Height="20.974" d:LayoutOverrides="HorizontalAlignment" RadiusX="5" RadiusY="5" Margin="0,1,1,0" />
			<Rectangle Fill="#FF0F1D04" Margin="0,8,0,0" VerticalAlignment="Top" Height="15.167" d:LayoutOverrides="HorizontalAlignment" />
			<Button x:Name="btnMinimize" HorizontalAlignment="Right" Margin="0,2.776,35.728,0" Style="{DynamicResource btnMinimize}" VerticalAlignment="Top" Width="4.472" Height="16.194" Content="Button" />
			<Button x:Name="btnClose" HorizontalAlignment="Right" Margin="0,3.561,8,0" Style="{DynamicResource btnClose}" VerticalAlignment="Top" Width="14.292" Height="14.106" Content="Button" />
            <TextBox x:Name="tbxUpload" Margin="172,75.949,118,0"  VerticalAlignment="Top" TextWrapping="NoWrap" BorderThickness="0.5" MaxLines="1" MaxLength="50" TabIndex="1" MaxHeight="20" MinHeight="20" Height="20" MinWidth="250" MaxWidth="250" d:LayoutOverrides="GridBox" />
