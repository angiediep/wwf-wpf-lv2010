            </Border>
            <ListBox x:Name="lbxUser" HorizontalAlignment="Left" Width="138.8" Margin="0,38,0,8" BorderBrush="#FF0F1D04" SelectionChanged="lbxUser_SelectionChanged"/>
            <TextBlock x:Name="lblChooseUser" HorizontalAlignment="Left" Margin="3,15,0,0" VerticalAlignment="Top" Width="135.8" Height="24.2" Text="Chọn Nhân Viên" TextWrapping="Wrap" Foreground="#FF0F1D04"/>
        </Grid>
        <TextBlock x:Name="lblFuncName" Margin="344,18.683,362,0" VerticalAlignment="Top" TextWrapping="Wrap" FontSize="16" Foreground="#FF0F1D04" d:LayoutOverrides="GridBox" Text="XEM BÁO CÁO CỦA NHÂN VIÊN"/>
    </Grid>
</UserControl>