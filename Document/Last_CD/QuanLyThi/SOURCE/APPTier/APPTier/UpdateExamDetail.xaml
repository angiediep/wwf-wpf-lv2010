<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:Microsoft_Windows_Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	xmlns:Custom="http://schemas.microsoft.com/wpf/2008/toolkit"
    x:Class="APPTier.UpdateExamDetail"
	x:Name="Window"
	Width="542.914" Height="254" WindowStyle="None" AllowsTransparency="True" Background="{x:Null}" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <LinearGradientBrush x:Key="TextBoxBorder" EndPoint="0,20" StartPoint="0,0" MappingMode="Absolute">
            <GradientStop Color="#ABADB3" Offset="0.05"/>
            <GradientStop Color="#E2E3EA" Offset="0.07"/>
            <GradientStop Color="#E3E9EF" Offset="1"/>
        </LinearGradientBrush>
        <Style x:Key="PasswordBoxStyle1" TargetType="{x:Type PasswordBox}">
            <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"/>
            <Setter Property="BorderBrush" Value="{StaticResource TextBoxBorder}"/>
            <Setter Property="FontFamily" Value="Times New Roman"/>
            <Setter Property="PasswordChar" Value="●"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
            <Setter Property="KeyboardNavigation.TabNavigation" Value="None"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="1"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="AllowDrop" Value="true"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type PasswordBox}">
                        <Microsoft_Windows_Themes:ListBoxChrome x:Name="Bd" SnapsToDevicePixels="true" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" RenderFocused="{TemplateBinding IsKeyboardFocusWithin}" RenderMouseOver="{TemplateBinding IsMouseOver}">
                            <ScrollViewer x:Name="PART_ContentHost" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </Microsoft_Windows_Themes:ListBoxChrome>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Background" TargetName="Bd" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"/>
                                <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="btnMinimize" TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid>
                            <Rectangle x:Name="btnMinimize" Fill="#FFB9B9B9" Stroke="#FF222222" StrokeThickness="0" RadiusX="2" RadiusY="1" Cursor="Hand" RenderTransformOrigin="0.5,0.5" MouseLeftButtonDown="btnMinimize_MouseLeftButtonDown">
                                <Rectangle.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform Angle="90"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </Rectangle.RenderTransform>
                            </Rectangle>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True"/>
                            <Trigger Property="IsDefaulted" Value="True"/>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="StrokeThickness" TargetName="btnMinimize" Value="1"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True"/>
                            <Trigger Property="IsEnabled" Value="False"/>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="btnClose" TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Canvas>
                            <Path x:Name="btnClose" Fill="#FFB9B9B9" Stretch="Fill" Stroke="Black" Width="16.199" Height="16.828" RenderTransformOrigin="0.501986877682136,0.500000026295751" Data="M8.0375705,0 L8.2255704,0 C9.3301399,0 10.225571,0.44771525 10.225571,1 L10.225571,6.252284 15.170967,6.197041 C15.723217,6.1908717 16.180907,7.0812454 16.193244,8.1857462 L16.198516,8.6577168 C16.210854,9.7622175 15.773169,10.662593 15.220918,10.668762 L10.225571,10.724563 10.225571,15.828 C10.225571,16.380285 9.3301399,16.827999 8.2255704,16.827999 L8.0375705,16.827999 C6.933001,16.827999 6.0375705,16.380285 6.0375704,15.828 L6.0375704,10.771345 1.0278039,10.827307 C0.47555399,10.833476 0.017864704,9.9431019 0.0055265427,8.8386021 L0.00025463104,8.3666315 C-0.01208353,7.2621307 0.42560196,6.3617549 0.97785234,6.3555861 L6.0375704,6.2990661 6.0375704,1 C6.0375705,0.44771525 6.933001,0 8.0375705,0 z" Canvas.Left="-0.857" Canvas.Top="-1.169" StrokeThickness="0" Cursor="Hand" MouseLeftButtonDown="btnClose_MouseLeftButtonDown">
                                <Path.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform Angle="46.028"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </Path.RenderTransform>
                            </Path>
                        </Canvas>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True"/>
                            <Trigger Property="IsDefaulted" Value="True"/>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="StrokeThickness" TargetName="btnClose" Value="1"/>
                                <Setter Property="Stroke" TargetName="btnClose" Value="#FF222222"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True"/>
                            <Trigger Property="IsEnabled" Value="False"/>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Margin="0" CornerRadius="5" BorderThickness="1" BorderBrush="#FF1A1A1A" Background="#FF75CFF8" MouseLeftButtonDown="Border_MouseLeftButtonDown"  Width="542.914" Height="254">
        <Grid Margin="0,-1" HorizontalAlignment="Left" Width="540.914">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="0*" />
            </Grid.ColumnDefinitions>
            <Label x:Name="lblNgayThi" HorizontalAlignment="Left" Margin="63,115.35,0,119.65" Content="Ngày thi:" Width="48.777" Foreground="#FF0F1D04" />
            <Custom:DatePicker x:Name="tbxPassword" Margin="0,115.35,171.039,0" BorderThickness="0.5" d:LayoutOverrides="GridBox" TabIndex="2" Height="21.5" VerticalAlignment="Top" MaxHeight="20" MinHeight="20" HorizontalAlignment="Right" Width="188.712">
                <Custom:DatePicker.BorderBrush>
                    <LinearGradientBrush EndPoint="0,20" StartPoint="0,0" MappingMode="Absolute">
                        <GradientStop Color="#FF888888" Offset="0.05"/>
                        <GradientStop Color="#FF888888" Offset="1"/>
                    </LinearGradientBrush>
                </Custom:DatePicker.BorderBrush>
            </Custom:DatePicker>
            <Button x:Name="btnRegister" HorizontalAlignment="Left" Margin="232.004,0,0,36.842"   VerticalAlignment="Bottom" Width="102.667" Content="Thêm Đợt Thi" Click="btnRegister_Click" Height="19" BorderBrush="#FF333333" TabIndex="7" IsDefault="True" d:LayoutOverrides="GridBox" />
            <Button x:Name="btnUpdate" HorizontalAlignment="Left" Margin="131.338,0,0,36.842"   VerticalAlignment="Bottom" Width="78.666" Content="Cập Nhật" Height="19" BorderBrush="#FF333333" TabIndex="7" IsDefault="True" Click="btnUpdate_Click" />
            <Button x:Name="btnXoa" Margin="0,0,129.792,36.842"   VerticalAlignment="Bottom" Content="Xóa" BorderBrush="#FF333333" Height="19" TabIndex="8" IsCancel="True" HorizontalAlignment="Right" Width="53.914" Click="btnXoa_Click" d:LayoutOverrides="HorizontalAlignment, GridBox" />
            <TextBlock x:Name="lblFuncName" Margin="0,36.167,191.576,0" VerticalAlignment="Top" Text="THÔNG TIN ĐỢT THI" Height="25" TextWrapping="Wrap" FontSize="16" Foreground="#FF0F1D04" HorizontalAlignment="Right" Width="175.829"><Run FontWeight="Bold"/></TextBlock>
            <Rectangle Fill="#FF0F1D04" VerticalAlignment="Top" Height="16.667" d:LayoutOverrides="HorizontalAlignment" RadiusX="5" RadiusY="5" Margin="0,1,0,0" />
            <Rectangle Fill="#FF0F1D04" Margin="0,8,0,0" VerticalAlignment="Top" Height="15.167" d:LayoutOverrides="HorizontalAlignment" />
            <Button x:Name="btnMinimize" HorizontalAlignment="Right" Margin="0,2.776,37.332,0" Style="{DynamicResource btnMinimize}" VerticalAlignment="Top" Width="4.472" Height="16.194" Content="Button" />
            <Button x:Name="btnClose" HorizontalAlignment="Right" Margin="0,3.561,9.604,0" Style="{DynamicResource btnClose}" VerticalAlignment="Top" Width="14.292" Height="14.106" Content="Button" />
            <Label x:Name="lblTenDotThi" HorizontalAlignment="Left" Margin="63,87.372,0,0"  VerticalAlignment="Top" Content="Tên đợt thi:" Height="17.5" Width="77.523" Foreground="#FF0F1D04" />
            <TextBox x:Name="tbxDotThi" Margin="0,84.872,110.925,0"  VerticalAlignment="Top" TextWrapping="NoWrap" BorderThickness="0.5" MaxLines="1" MaxLength="50" TabIndex="1" MaxHeight="20" MinHeight="20" Height="20" MinWidth="250" MaxWidth="250" Width="250" HorizontalAlignment="Right" d:LayoutOverrides="GridBox" />
            <Label Margin="63,0,0,85.71" Name="label1" HorizontalAlignment="Left" Width="92.19" VerticalAlignment="Bottom" Height="16.031" Foreground="#FF0F1D04">Số lượng thí sinh:</Label>
            <TextBlock Margin="0,0,170.27,81.741" Name="tbxSoluongthisinh" MaxHeight="20" MinHeight="20" HorizontalAlignment="Right" Width="189.481" d:LayoutOverrides="GridBox" VerticalAlignment="Bottom" Height="20" Text="" />
        </Grid>
    </Border>
</Window>