<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d" xmlns:local="clr-namespace:APPTier"
	x:Class="APPTier.UserHomepage"
	x:Name="Window"
	Title="TTTH"
	Width="1000" Height="700" Background="{x:Null}" AllowsTransparency="True" WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Storyboard x:Key="btnCloseHover"/>
        <Storyboard x:Key="btnCloseLeave"/>
        <Storyboard x:Key="MinimizeEnter"/>
        <Storyboard x:Key="MinimizeLeave"/>
        <Style x:Key="ButtonStyle1" TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid>
                            <Label x:Name="lblInbox"  Background="#00CE2121" Foreground="#FF3BD700" RenderTransformOrigin="0.5,0.5" Style="{DynamicResource LabelStyle1}">
                                <Label.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform AngleX="-18.611"/>
                                        <RotateTransform/>
                                        <TranslateTransform X="-2.413"/>
                                    </TransformGroup>
                                </Label.RenderTransform>
                            </Label>
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" RecognizesAccessKey="True"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True"/>
                            <Trigger Property="IsDefaulted" Value="True"/>
<Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" TargetName="lblInbox" Value="#FF8FFF64"/>
                                <Setter Property="Cursor" TargetName="lblInbox" Value="Hand"/>
                            </Trigger>
                            
                            <Trigger Property="IsPressed" Value="True"/>
                            <Trigger Property="IsEnabled" Value="False"/>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="LabelStyle1" TargetType="{x:Type Label}">
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="VerticalContentAlignment" Value="Top" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Label}">
                        <Grid>
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" RecognizesAccessKey="True" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="false" />
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
        </Style>
        <Style x:Key="btnClose" TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Canvas>
                            <Path x:Name="btnClose" Fill="#FFB9B9B9" Stretch="Fill" Stroke="Black" Width="16.199" Height="16.828" RenderTransformOrigin="0.501986877682136,0.500000026295751" Data="M8.0375705,0 L8.2255704,0 C9.3301399,0 10.225571,0.44771525 10.225571,1 L10.225571,6.252284 15.170967,6.197041 C15.723217,6.1908717 16.180907,7.0812454 16.193244,8.1857462 L16.198516,8.6577168 C16.210854,9.7622175 15.773169,10.662593 15.220918,10.668762 L10.225571,10.724563 10.225571,15.828 C10.225571,16.380285 9.3301399,16.827999 8.2255704,16.827999 L8.0375705,16.827999 C6.933001,16.827999 6.0375705,16.380285 6.0375704,15.828 L6.0375704,10.771345 1.0278039,10.827307 C0.47555399,10.833476 0.017864704,9.9431019 0.0055265427,8.8386021 L0.00025463104,8.3666315 C-0.01208353,7.2621307 0.42560196,6.3617549 0.97785234,6.3555861 L6.0375704,6.2990661 6.0375704,1 C6.0375705,0.44771525 6.933001,0 8.0375705,0 z" Canvas.Left="-0.857" Canvas.Top="-1.169" StrokeThickness="0" Cursor="Hand" MouseLeftButtonDown="btnClose_MouseLeftButtonDown">
                                <Path.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform Angle="46.028"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </Path.RenderTransform>
                            </Path>
                        </Canvas>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True"/>
                            <Trigger Property="IsDefaulted" Value="True"/>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="StrokeThickness" TargetName="btnClose" Value="1"/>
                                <Setter Property="Stroke" TargetName="btnClose" Value="#FF222222"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True"/>
                            <Trigger Property="IsEnabled" Value="False"/>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="btnMinimize" TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid>
                            <Rectangle x:Name="btnMinimize" Fill="#FFB9B9B9" Stroke="#FF222222" StrokeThickness="0" RadiusX="2" RadiusY="1" Cursor="Hand" RenderTransformOrigin="0.5,0.5" MouseLeftButtonDown="btnMinimize_MouseLeftButtonDown">
                                <Rectangle.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform Angle="90"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </Rectangle.RenderTransform>
                            </Rectangle>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True"/>
                            <Trigger Property="IsDefaulted" Value="True"/>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="StrokeThickness" TargetName="btnMinimize" Value="1"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True"/>
                            <Trigger Property="IsEnabled" Value="False"/>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Margin="0" CornerRadius="5" BorderThickness="1" BorderBrush="#FF1A1A1A" Background="#FFB3FF47" MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Grid Margin="0">
            
            <TextBox x:Name="tbxSearch" TextWrapping="Wrap" FontSize="10.667" Height="22" Margin="383.98,27.167,350.467,0" VerticalAlignment="Top" BorderThickness="0.5"/>
            <ComboBox x:Name="cbxSearchType" Margin="0,27.167,191.8,0" Width="127" Height="22" HorizontalAlignment="Right" VerticalAlignment="Top" d:LayoutOverrides="HorizontalAlignment"/>
            <Button x:Name="btnNewMsg" HorizontalAlignment="Right" Margin="0,29.067,77.467,0" Style="{DynamicResource ButtonStyle1}" VerticalAlignment="Top" Width="99.333" Height="17.833"  Click="btnNewMsg_Click"/>
            <Label x:Name="lblChooseExam_Copy" HorizontalAlignment="Left" Margin="331.68,28.227,0,0" VerticalAlignment="Top" Content="Tìm kiếm" Foreground="#FF0F1D04"/>
            <Rectangle Fill="#FF0F1D04" VerticalAlignment="Top" Height="16.167" Grid.Column="1" RadiusX="5" RadiusY="5"/>
            <Rectangle Fill="#FF0F1D04" Margin="0,8,0,0" VerticalAlignment="Top" Height="15.167" Grid.Column="1"/>
            <Button x:Name="btnSearch" HorizontalAlignment="Right" Margin="0,27.167,322.8,0" VerticalAlignment="Top" Width="27.667" Height="22" Content="" BorderThickness="1" Click="btnSearch_Click"/>
            <Button x:Name="btnHome" HorizontalAlignment="Right" Margin="0,0,8,648.833" VerticalAlignment="Bottom" Width="57" Height="20.94" Content="Home" Click="btnHome_Click"/>
            <Button x:Name="btnMinimize" HorizontalAlignment="Right" Margin="0,3.839,35.728,0" Style="{DynamicResource btnMinimize}" VerticalAlignment="Top" Width="4.472" Height="16.194" Content="Button"/>
            <Button x:Name="btnClose" HorizontalAlignment="Right" Margin="0,4.624,8,0" Style="{DynamicResource btnClose}" VerticalAlignment="Top" Width="14.292" Height="14.106" Content="Button"/>
            <local:UserInbox x:Name="ucInbox" Margin="21,62,31,8" Visibility="Hidden"/>
            <local:UserWfView x:Name="ucHome" Margin="21,62,31,8"/>

        </Grid>
    </Border>
</Window>