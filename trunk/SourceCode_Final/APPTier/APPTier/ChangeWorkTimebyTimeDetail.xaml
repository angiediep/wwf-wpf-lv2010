            <Rectangle Fill="#FF0F1D04" Margin="0,10.219,0.01,0" VerticalAlignment="Top" Height="15.167" d:LayoutOverrides="HorizontalAlignment" />
            <Button x:Name="btnMinimize" HorizontalAlignment="Right" Margin="0,4.995,35.52,0" Style="{DynamicResource btnMinimize}" VerticalAlignment="Top" Width="4.472" Height="16.194" Content="Button" />
            <Button x:Name="btnClose" HorizontalAlignment="Right" Margin="0,5.78,7.792,0" Style="{DynamicResource btnClose}" VerticalAlignment="Top" Width="14.293" Height="14.106" Content="Button" />
