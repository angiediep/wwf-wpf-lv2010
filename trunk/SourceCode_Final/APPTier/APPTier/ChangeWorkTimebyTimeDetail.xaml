                                    </TransformGroup>
                                </Path.RenderTransform>
                            </Path>
                        </Canvas>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True"/>
                            <Trigger Property="IsDefaulted" Value="True"/>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="StrokeThickness" TargetName="btnClose" Value="1"/>
                                <Setter Property="Stroke" TargetName="btnClose" Value="#FF222222"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True"/>
                            <Trigger Property="IsEnabled" Value="False"/>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Margin="0" CornerRadius="5" BorderThickness="1" BorderBrush="#FF1A1A1A" Background="#FFB3FF47" MouseLeftButtonDown="Border_MouseLeftButtonDown"  Width="542.914" Height="254">
        <Grid Margin="0" d:LayoutOverrides="Width">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="0*" />
            </Grid.ColumnDefinitions>
            <Label x:Name="lblNgayThi" HorizontalAlignment="Left" Margin="63,124.35,0,110.65" Content="Ngày bắt đầu:" Width="77.523" d:LayoutOverrides="HorizontalAlignment" Foreground="#FF0F1D04" />
            <TextBox x:Name="tbxNgayBatDau" Margin="0,115.35,183.32,0" BorderThickness="0.5" d:LayoutOverrides="GridBox" TabIndex="2" Height="20" VerticalAlignment="Top" MaxHeight="20" MinHeight="20" HorizontalAlignment="Right" Width="189.481">
                <TextBox.BorderBrush>
                    <LinearGradientBrush EndPoint="0,20" StartPoint="0,0" MappingMode="Absolute">
                        <GradientStop Color="#FF888888" Offset="0.05"/>
                        <GradientStop Color="#FF888888" Offset="1"/>
                    </LinearGradientBrush>
                </TextBox.BorderBrush>
            </TextBox>
            <Button x:Name="btnUpdate" HorizontalAlignment="Right" Margin="0,0,250.806,48.175"   VerticalAlignment="Bottom" Width="75" Content="Cập Nhật" Height="23.077" BorderBrush="#FF333333" TabIndex="7" IsDefault="True" Click="btnUpdate_Click" d:LayoutOverrides="GridBox" />
