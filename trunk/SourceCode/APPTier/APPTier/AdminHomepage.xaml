<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d" xmlns:local="clr-namespace:APPTier"
	x:Class="APPTier.AdminHomepage"
	x:Name="Window"
	Title="AdminHomepage"
	Width="1000" Height="700" AllowsTransparency="True" WindowStyle="None" Background="{x:Null}" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
	<Window.Resources>
		<Style x:Key="btnMinimize" TargetType="{x:Type Button}">
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="{x:Type Button}">
						<Grid>
							<Rectangle x:Name="btnMinimize" Fill="#FFB9B9B9" Stroke="#FF222222" StrokeThickness="0" RadiusX="2" RadiusY="1" Cursor="Hand" RenderTransformOrigin="0.5,0.5" MouseLeftButtonDown="btnMinimize_MouseLeftButtonDown">
								<Rectangle.RenderTransform>
									<TransformGroup>
										<ScaleTransform/>
										<SkewTransform/>
										<RotateTransform Angle="90"/>
										<TranslateTransform/>
									</TransformGroup>
								</Rectangle.RenderTransform>
							</Rectangle>
						</Grid>
						<ControlTemplate.Triggers>
							<Trigger Property="IsFocused" Value="True"/>
							<Trigger Property="IsDefaulted" Value="True"/>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter Property="StrokeThickness" TargetName="btnMinimize" Value="1"/>
							</Trigger>
							<Trigger Property="IsPressed" Value="True"/>
							<Trigger Property="IsEnabled" Value="False"/>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
		<Style x:Key="btnClose" TargetType="{x:Type Button}">
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="{x:Type Button}">
						<Canvas>
							<Path x:Name="btnClose" Fill="#FFB9B9B9" Stretch="Fill" Stroke="Black" Width="16.199" Height="16.828" RenderTransformOrigin="0.501986877682136,0.500000026295751" Data="M8.0375705,0 L8.2255704,0 C9.3301399,0 10.225571,0.44771525 10.225571,1 L10.225571,6.252284 15.170967,6.197041 C15.723217,6.1908717 16.180907,7.0812454 16.193244,8.1857462 L16.198516,8.6577168 C16.210854,9.7622175 15.773169,10.662593 15.220918,10.668762 L10.225571,10.724563 10.225571,15.828 C10.225571,16.380285 9.3301399,16.827999 8.2255704,16.827999 L8.0375705,16.827999 C6.933001,16.827999 6.0375705,16.380285 6.0375704,15.828 L6.0375704,10.771345 1.0278039,10.827307 C0.47555399,10.833476 0.017864704,9.9431019 0.0055265427,8.8386021 L0.00025463104,8.3666315 C-0.01208353,7.2621307 0.42560196,6.3617549 0.97785234,6.3555861 L6.0375704,6.2990661 6.0375704,1 C6.0375705,0.44771525 6.933001,0 8.0375705,0 z" Canvas.Left="-0.857" Canvas.Top="-1.169" StrokeThickness="0" Cursor="Hand" MouseLeftButtonDown="btnClose_MouseLeftButtonDown">
								<Path.RenderTransform>
									<TransformGroup>
										<ScaleTransform/>
										<SkewTransform/>
										<RotateTransform Angle="46.028"/>
										<TranslateTransform/>
									</TransformGroup>
								</Path.RenderTransform>
							</Path>
						</Canvas>
						<ControlTemplate.Triggers>
							<Trigger Property="IsFocused" Value="True"/>
							<Trigger Property="IsDefaulted" Value="True"/>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter Property="StrokeThickness" TargetName="btnClose" Value="1"/>
								<Setter Property="Stroke" TargetName="btnClose" Value="#FF222222"/>
							</Trigger>
							<Trigger Property="IsPressed" Value="True"/>
							<Trigger Property="IsEnabled" Value="False"/>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
	</Window.Resources>

	<Border Margin="0" CornerRadius="5" BorderThickness="1" BorderBrush="#FF1A1A1A" Background="#FF282828" MouseLeftButtonDown="Border_MouseLeftButtonDown">
		<Grid Margin="0">
		
			<Rectangle Fill="#FF444444" VerticalAlignment="Top" Height="16.167" Grid.Column="1" RadiusX="5" RadiusY="5" d:IsLocked="True"/>
			<Rectangle Fill="#FF444444" Margin="0,8,0,0" VerticalAlignment="Top" Height="15.167" Grid.Column="1" d:IsLocked="True"/>
			<TabControl x:Name="tabMainMenu" Margin="8,27.167,8,8" TabStripPlacement="Right">
				<TabItem x:Name="tabUser" Header="Nhân viên">
					<Grid>
						<Menu x:Name="menuUser" VerticalAlignment="Top" Height="22">
							<MenuItem x:Name="mitemUpdateUser" Margin="0" Header="Cập Nhật" Click="mitemUpdateUser_Click"/>
							<MenuItem x:Name="mitemAssignUser" Margin="0" Header="Phân công">
								<MenuItem x:Name="mitemAssignByTime" Header="Theo Kì" Height="22" Click="mitemAssignByTime_Click"/>
								<MenuItem x:Name="mitemAssignByExam" Header="Theo Đợt thi" Height="22" Click="mitemAssignByExam_Click"/>
							</MenuItem>
						</Menu>
						<local:AssignUser x:Name="ucAssignByExam" Margin="6.04,26.833,8,8" Visibility="Hidden"/>
						<local:AssignUser2 x:Name="ucAssignByTime" Margin="6.04,26.833,8,8" Visibility="Hidden"/>
						<local:UpdateUser x:Name="ucUpdateUser" Margin="6.04,26.833,8,8" Visibility="Hidden"/>
					</Grid>
				</TabItem>
				<TabItem x:Name="tabExam" Header="Đợt thi">
					<Grid>
						<Menu x:Name="menuExam" VerticalAlignment="Top" Height="22">
							<MenuItem x:Name="mitemUpdateExam" Margin="0" Header="Cập Nhật" Click="mitemUpdateExam_Click"/>
							<MenuItem x:Name="mitemStatistics" Margin="0" Header="Thống Kê">
								<MenuItem x:Name="mitemGeneralStatistic" Header="Tổng quát" Height="22" Click="mitemGeneralStatistic_Click"/>
								<MenuItem x:Name="mitemDetailStatistic" Header="Chi tiết" Height="22" Click="mitemDetailStatistic_Click"/>
								<MenuItem x:Name="mitemCompareStatistic" Height="22" Header="So sánh" Click="mitemCompareStatistic_Click"/>
								<MenuItem x:Name="mitemGanttStatistic" Header="Lược đồ Gantt" Height="22" Click="mitemGanttStatistic_Click"/>
							</MenuItem>
						</Menu>
						<local:UpdateExam x:Name="ucUpdateExam" Margin="6.04,26.833,8,8" Visibility="Hidden"/>
						<local:ComparisionStatistics x:Name="ucComparisionStatistic" Margin="6.04,26.833,8,8" Visibility="Hidden"/>
						<local:GeneralStatistics x:Name="ucGeneralStatistic" Margin="6.04,26.833,8,8" Visibility="Hidden"/>
						<local:InDetailStatistics x:Name="ucDetailStatistic" Margin="6.04,26.833,8,8" Visibility="Hidden"/>
						<local:GanttView x:Name="ucGanttStatistic" Margin="6.04,26.833,8,8" Visibility="Hidden"/>
					</Grid>
				</TabItem>
				<TabItem Header="Hệ Thống">
					<Grid>
						<Menu x:Name="menuSystem" VerticalAlignment="Top" Height="22">
							<MenuItem x:Name="mitemRules" Margin="0" Header="Đổi thông số hệ thống" Click="mitemUpdateUser_Click"/>
							<MenuItem x:Name="mitemSysInfo" Margin="0" Header="Đổi thông số ứng dụng">
								<MenuItem x:Name="mitemAssignByTime1" Header="Theo Kì" Height="22" Click="mitemAssignByTime_Click"/>
								<MenuItem x:Name="mitemAssignByExam1" Header="Theo Đợt thi" Height="22" Click="mitemAssignByExam_Click"/>
							</MenuItem>
						</Menu>
					</Grid>
				</TabItem>
				<TabItem x:Name="tabHelp" Header="Trợ giúp">
					<Grid>
						<Menu x:Name="menuHelp" VerticalAlignment="Top" Height="22">
							<MenuItem x:Name="mitemAboutUs" Margin="0" Header="Thông tin hệ thống"/>
							<MenuItem x:Name="mitemHowToUse" Margin="0" Header="Hướng dẫn sử dụng"/>
						</Menu>
					</Grid>
				</TabItem>
			</TabControl>
			<Button x:Name="btnMinimize" Margin="0,2.776,38.228,0" Style="{DynamicResource btnMinimize}" VerticalAlignment="Top" Height="16.194" Content="Button" HorizontalAlignment="Right" Width="4.472"/>
			<Button x:Name="btnClose" Margin="0,3.561,10.5,0" Style="{DynamicResource btnClose}" VerticalAlignment="Top" Height="14.106" Content="Button" HorizontalAlignment="Right" Width="14.292"/>
			
		</Grid>
	</Border>
</Window>