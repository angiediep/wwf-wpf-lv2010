<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="APPTier.Tooltip1"
	x:Name="UserControl" Width="295" Height="380" Background="#7F2C2C2C">

	<Border BorderThickness="1" CornerRadius="6" BorderBrush="#FF75CFF8" Background="#80207AA3">
		<Grid x:Name="LayoutRoot" Margin="1,-1,-1,1">
			<Border Margin="21,20,20.5,91.5" BorderBrush="#FF75CFF8" BorderThickness="1" CornerRadius="3">
				<TextBlock x:Name="tbxContent" Foreground="#FF0F1D04" TextWrapping="Wrap"/>
			</Border>
			<Button x:Name="btnStart" HorizontalAlignment="Left" Margin="21,0,0,46.5" VerticalAlignment="Bottom" Width="77.667" Height="23.5" Content="Bắt đầu" Click="btnStart_Click"/>
			<Button x:Name="btnChange" Margin="102.667,0,102,46.5" VerticalAlignment="Bottom" Height="23.5" Content="Chỉnh sửa" Click="btnChange_Click"/>
			<Button x:Name="btnFinish" Margin="0,0,20.5,46.5" VerticalAlignment="Bottom" Height="23.5" Content="Kết Thúc" HorizontalAlignment="Right" Width="77.5" Click="btnFinish_Click"/>
		</Grid>
	</Border>
</UserControl>